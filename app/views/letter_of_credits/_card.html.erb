<div class="w-full lg:w-1/4 md:w-1/3 my-2 mx-2 shadow-sm hover:shadow-xl overflow-hidden">
  <div class="bg-primary-800 px-2 py-1 text-lg">
    <span class="text-white"><%= letter_of_credit.lc_number %></span>
    <%= link_to letter_of_credit_path(letter_of_credit), method: :delete, data: {confirm: 'LC and all associated data will be deleted, Are you sure?'} do %>
      <i class="fas fa-trash-alt float-right mt-1 text-white hover:text-yellow-500 rotate"></i>
    <% end %>
    <%= link_to edit_letter_of_credit_path(letter_of_credit) do %>
      <i class="fas fa-pencil-alt float-right mt-1 mr-4 text-white hover:text-yellow-500 rotate"></i>
    <% end %>
    <%= link_to letter_of_credit_path(letter_of_credit) do %>
      <i class="fas fa-search-plus float-right mt-1 mr-4 text-white hover:text-yellow-500 rotate"></i>
    <% end %>

  </div>
  <div class="flex flex-row flex-wrap border-b border-gray-300">
    <div class="w-1/3 bg-white text-gray-700 text-sm py-2">
      <span class="mx-2">Expiry</span>
    </div>
    <div class="w-2/3 bg-white text-sm py-2">
      <span class="mx-2"><%= letter_of_credit.expiry_date %></span>
    </div>
  </div>
  <div class="flex flex-row flex-wrap border-b border-gray-300">
    <div class="w-1/3 bg-white text-gray-700 text-sm py-2">
      <span class="mx-2">Client</span>
    </div>
    <div class="w-2/3 bg-white text-sm py-2">
      <span class="mx-2"><%= letter_of_credit.client %></span>
    </div>
  </div>
  <div class="flex flex-row flex-wrap border-b border-gray-300">
    <div class="w-1/3 bg-white text-gray-700 text-sm py-2" style="height: 15vh">
      <span class="mx-2">Comment</span>
    </div>
    <div class="w-2/3 bg-white text-sm py-2" style="height: 15vh; overflow-y: scroll">
      <span class="mx-2"><%= letter_of_credit.comment %></span>
    </div>
  </div>
  <div class="flex flex-row flex-wrap bg-gray-300 text-sm">
    <p class="px-2 py-2">Attachments
      <% if letter_of_credit.files.count == 0 %>
        <span class="bg-white rounded-full p-1 m-2"><%= letter_of_credit.files.count %></span>
      <% else %>
        <% letter_of_credit.files.each do |file| %>
          <%= link_to file, target: :blank do %>
            <span><i class="fas fa-paperclip m-1 text-teal-500 hover:text-red-500"></i></span>
          <% end %>
        <% end %>
      <% end %>
    </p>
  </div>
</div>