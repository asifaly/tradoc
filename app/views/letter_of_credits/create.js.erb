<% if @save_success %>
$("#lc-form").remove();
$("#new-title").remove();
$("#new-lc-button").show();
$("#lc-list").append("<%= j render @letter_of_credit %>").fadeIn("slow");
$("#flash-section").html('<%= j render partial: "shared/flash", locals: { notice: flash.now[:notice] } %>')
$("#notice").fadeOut(5000, function () {
    $(this).remove();
});
<% else %>
$("#flash-section").html('<%= j render partial: "shared/flash", locals: { alert: flash.now[:alert] } %>')
$("#alert").fadeOut(5000, function () {
    $(this).remove();
});
<% end %>

