<div class="flex flex-wrap flex-row">
  <%= render partial: "shared/main_navbar" %>
  <div class="lg:w-10/12 md:w-12/12 w-full bg-gray-300">
    <div class="my-4">
      <% if @letter_of_credits.exists? %>
        <div class="w-full lg:w-10/12 p-2 mx-6 my-4 flex justify-end" id="new-lc-button">
          <%= link_to 'Upload New LC', new_letter_of_credit_path, remote: true, class: "btn btn-primary" %>
        </div>
        <div class="shadow-xl m-6" id="new-lc">

        </div>
        <div class="flex flex-wrap" id="lc-list">
          <%# @letter_of_credits.each do |letter_of_credit| %>
            <%= render @letter_of_credits %>
          <%# end %>
          <% if @pagy.pages > 1 %>
            <div class="text-center my-6">
              <%== pagy_nav(@pagy) %>
            </div>
          <% end %>
        </div>
      <% else %>
        <div class="flex flex-col items-center justify-center p-8 lg:flex-row" style="height: 90vh;">
          <%= image_tag "empty.svg", class: "mb-4 lg:w-1/2" %>
          <div class="flex-1 text-center">
            <p class="h3 mb-4">Create your first Letter Of Credit</p>
            <%= link_to 'New Letter Of Credit', new_letter_of_credit_path, class: "btn btn-primary" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

