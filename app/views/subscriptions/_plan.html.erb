<div class="lg:w-1/3 w-full text-center p-8 border shadow m-4 rounded-lg bg-white">
  <h5><%= plan.name %></h5>
  <div>
    <sup class="text-xl">INR</sup>
    <span class="text-4xl"><%= plan.amount %></span>
    <span class="text-lg">/ per document / billed every <%= plan.interval %></span>
  </div>

  <div class="my-2 text-center">
    <% Array.wrap(plan.features).each do |plan_feature| %>
      <p class="mb-4"><%= plan_feature %></p>
    <% end %>
  </div>

  <%# Yield for custom actions at the bottom %>
  <%= yield %>
</div>
